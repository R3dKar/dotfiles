(defpoll updates-count
  :interval "20m"
  :initial "0"
  "checkupdates | wc -l"
)

(defwidget updates-module []
  (eventbox
    :cursor "pointer"
    :onclick "uwsm app -- kitty --hold zsh -c 'yay ; ${EWW_CMD} update updates-count=0'"
    :tooltip "${updates-count} обновлений пакетов"
    :visible {updates-count > 0}

    (box
      :spacing 5
      :space-evenly false

      (icon :icon "󰣇")
      "${updates-count}"
    )
  )
)
